---
import { Icon } from "astro-icon";
import { Picture, Image } from "@astrojs/image/components";
import escalator from "../images/eliz-line.jpeg";

import { SITE_TITLE, SITE_TITLE_SMALL, EMAIL, TEL_GR, TEL_UK } from "../consts";
import Layout from "../Layout/BaseLayout.astro";
import Container from "../components/container.astro";
---

<Layout title="Contact us">
  <Container>
    <div class="-mt-12 flex justify-center overflow-hidden rounded-lg">
      <Picture
        class="-z-10 h-96 w-[100vw] object-none"
        src={escalator}
        widths={[200, 400, 800]}
        aspectRatio="5325:5264"
        sizes="(max-width: 800px) 100vw, 800px"
        formats={["avif", "jpeg", "png", "webp"]}
        alt="Escalator"
      />
    </div>

    <div class="isolate bg-white px-6 py-0 sm:pt-0 lg:px-8">
      <div class="mx-auto max-w-2xl">
        <h2
          class="mt-12 text-3xl font-bold tracking-tight text-zinc-900 sm:text-4xl">
          Contact
        </h2>
        <p class="mt-2 text-zinc-600">
          We appreciate your interest in {SITE_TITLE}, and we look forward to
          discussing your project needs. Whether you have questions, need a
          consultation, or want to collaborate with us on your next venture, we
          are here to assist you.
        </p>
        <p class="mt-4 font-semibold">
          Letâ€™s start the conversation with a free consultation about your
          project with one of our designers.
        </p>

        <!-- <div class="mx-auto mt-24 ">
        <h2 class="text-2xl font-bold tracking-tight text-zinc-900 sm:text-3xl">
          Get in touch
        </h2>
        <p class="mx-auto mt-2 text-zinc-600">
          Please fill out the contact form below with your name, email address,
          and a brief description of your project or inquiry. This will help us
          better understand your needs and ensure that the right team member
          reaches out to you promptly.
        </p>
      </div> -->

        {/*FORM */}
        <!-- <form action="#" method="POST" class="mx-auto mt-6 sm:mt-12"> -->
        <form
          action="https://formsubmit.co/info@vantagede.com"
          method="POST"
          class="mx-auto mt-6 max-w-xl sm:mt-12">
          <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
            <div>
              <label
                for="first-name"
                class="block text-sm font-semibold leading-6 text-zinc-900"
                >First name <span class="text-xs text-zinc-400">(required)</span
                ></label
              >
              <div class="mt-2.5">
                <input
                  type="text"
                  name="first-name"
                  id="first-name"
                  autocomplete="given-name"
                  class="block w-full rounded-md border-0 bg-zinc-100 px-3.5 py-2 text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 placeholder:text-zinc-400 focus:ring-1 focus:ring-inset focus:ring-zinc-600 sm:text-sm sm:leading-6"
                  required
                />
              </div>
            </div>
            <div>
              <label
                for="last-name"
                class="block text-sm font-semibold leading-6 text-zinc-900"
                >Last name <span class="text-xs text-zinc-400">(required)</span
                ></label
              >
              <div class="mt-2.5">
                <input
                  type="text"
                  name="last-name"
                  id="last-name"
                  autocomplete="family-name"
                  class="block w-full rounded-md border-0 bg-zinc-100 px-3.5 py-2 text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 placeholder:text-zinc-400 focus:ring-1 focus:ring-inset focus:ring-zinc-600 sm:text-sm sm:leading-6"
                  required
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="company"
                class="block text-sm font-semibold leading-6 text-zinc-900"
                >Company</label
              >
              <div class="mt-2.5">
                <input
                  type="text"
                  name="company"
                  id="company"
                  autocomplete="organization"
                  class="block w-full rounded-md border-0 bg-zinc-100 px-3.5 py-2 text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 placeholder:text-zinc-400 focus:ring-1 focus:ring-inset focus:ring-zinc-600 sm:text-sm sm:leading-6"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="email"
                class="block text-sm font-semibold leading-6 text-zinc-900"
                >Email <span class="text-xs text-zinc-400">(required)</span
                ></label
              >
              <div class="mt-2.5">
                <input
                  type="email"
                  name="email"
                  id="email"
                  autocomplete="email"
                  class="block w-full rounded-md border-0 bg-zinc-100 px-3.5 py-2 text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 placeholder:text-zinc-400 focus:ring-1 focus:ring-inset focus:ring-zinc-600 sm:text-sm sm:leading-6"
                  required
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="subject"
                class="block text-sm font-semibold leading-6 text-zinc-900"
                >Subject (or Project Address) <span
                  class="text-xs text-zinc-400">(required)</span
                ></label
              >
              <div class="mt-2.5">
                <input
                  type="text"
                  name="subject"
                  id="subject"
                  autocomplete="subject"
                  class="block w-full rounded-md border-0 bg-zinc-100 px-3.5 py-2 text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 placeholder:text-zinc-400 focus:ring-1 focus:ring-inset focus:ring-zinc-600 sm:text-sm sm:leading-6"
                  required
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="message"
                class="block text-sm font-semibold leading-6 text-zinc-900"
                >Message <span class="text-xs text-zinc-400">(required)</span
                ></label
              >
              <div class="mt-2.5">
                <textarea
                  name="message"
                  id="message"
                  rows="4"
                  class="block w-full rounded-md border-0 bg-zinc-100 px-3.5 py-2 text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 placeholder:text-zinc-400 focus:ring-1 focus:ring-inset focus:ring-zinc-600 sm:text-sm sm:leading-6"
                  placeholder="A brief description of your project or inquiry"
                  required></textarea>
              </div>
            </div>
          </div>
          <div class="mt-10">
            <button
              type="submit"
              class="block w-full rounded-md bg-zinc-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-zinc-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-zinc-600"
              >SUBMIT</button
            >
            <input type="hidden" name="_next" value="/thanks.html" />
          </div>
        </form>

        {/* contacts */}
        <p class="mt-12 md:mt-32 font-semibold">
          For general inquires or simply say hello, drop us an email or give us
          a call.
        </p>
        <div
          class="m-auto mt-12 px-4 py-10 bg-sky-600 text-xl font-semibold text-white overflow-hidden grid grid-cols-1 md:grid-cols-2">
