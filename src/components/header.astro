---
import { SITE_TITLE } from "../consts";
---

<header
  class="relative 
  z-50 
  w-full 
  flex-none 
  text-sm 
  font-semibold 
  leading-6 
  text-slate-900 
  bg-slate-100">
  <nav aria-label="Global" class="mx-auto max-w-container sm:px-8">
    <div class="relative flex items-center py-7 px-6">
      <!-- Logo -->
      <a class="mr-auto flex-none text-slate-900 text-xl" href="/">
        <span class="sr-only">{SITE_TITLE}</span>
        <div class="h-6 w-auto">{SITE_TITLE}</div>
      </a>
      <!-- Menu -->
      <div class="hidden sm:flex sm:items-center">
        <a href="/about">About us</a>
        <a class="ml-3 md:ml-6" href="/services">Services</a>
        <a class="ml-3 md:ml-6" href="/experience">Experience</a>
        <a class="ml-3 md:ml-6" href="/contact">Contact us</a>
      </div>

      <!-- mobile menu -->
      <button
        type="button"
        class="-my-1 -mr-1 ml-6 flex h-8 w-8 items-center justify-center sm:hidden"
      >
        <span class="sr-only">Open navigation</span>
        <svg viewBox="0 0 24 24" class="h-6 w-6 stroke-slate-900">
          <path
            d="M3.75 12h16.5M3.75 6.75h16.5M3.75 17.25h16.5"
            fill="none"
            stroke-width="1.5"
            stroke-linecap="round"></path>
        </svg>
      </button>
    </div>
  </nav>
</header>
