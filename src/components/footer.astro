---
import { Icon } from "astro-icon";
import { Picture, Image } from "@astrojs/image/components";
import { SITE_TITLE, SITE_TITLE_SMALL, SITE_SUB_TITLE, EMAIL } from "../consts";
import etek from "../images/logo/etek-sm.png";
// const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list="relative  border-t border-gray-200 ">
  <div
    class="relative mx-auto mt-16 grid grid-cols-1 justify-items-center bg-zinc-200 px-4 pt-6 sm:mt-32 sm:grid-cols-3 sm:px-6">
    <!-- 1 -->
    <div
      class="hidden flex-none flex-col items-center justify-around py-6 sm:visible sm:flex sm:items-start sm:py-2">
      <div class="text-xl">
        <span class="">{SITE_TITLE_SMALL}</span>
        <span class="text-zinc-600 md:visible">{SITE_SUB_TITLE}</span>
      </div>
      <div class="text-sm text-zinc-600">
        Engineering a better Future, <span class="text-sky-600">Together</span>
      </div>
    </div>
    <!-- 2 -->
    <div class="p-2"></div>
    <!-- 3 -->
    <a class="p-2 text-xl font-light" href=`mailto:info@vantagede.com`
      >info@{EMAIL}</a
    >
    <!-- <a class="p-2 text-xl" href=`mailto:info@${EMAIL}`>info@{EMAIL}</a> -->
    <!-- 4 -->
    <div class="p-2"></div>
    <!-- 5 -->
    <a class="inline-block p-6 text-xl font-bold" href="#"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="h-12 w-12">
        <path
          fill-rule="evenodd"
          d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm.53 5.47a.75.75 0 00-1.06 0l-3 3a.75.75 0 101.06 1.06l1.72-1.72v5.69a.75.75 0 001.5 0v-5.69l1.72 1.72a.75.75 0 101.06-1.06l-3-3z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
    <!-- 6 -->
    <div>
      <div
        class="flex flex-col items-center border border-sky-100 bg-cyan-600 p-2 text-white">
        <p class="font-display text-3xl">ICE</p>
        <p class="mt-0 border-t-2">Membership</p>
      </div>
      <div>
        <Image
          class="mt-4 w-20"
          src={etek}
          alt="etek-logo"
          width={127}
          aspectRatio="150:40"
        />
        <p class="text-sm text-zinc-500">
          Cyprus Scientific <br /> Technical Chamber
        </p>
      </div>
    </div>
  </div>
  <div
    class="flex justify-center gap-4 bg-zinc-200 p-4 px-6 py-2 pt-4 text-xs text-zinc-600 sm:grid-cols-2 sm:justify-start">
    Â© 2023 {SITE_TITLE} | All rights reserved.
  </div>
</footer>
