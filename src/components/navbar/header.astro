---
import { Icon } from "astro-icon";
import { SITE_TITLE, SITE_TITLE_SMALL } from "../../consts";

/** Main menu items */
const navItems = [
  { title: "About us", url: "/about/" },
  { title: "Services", url: "/services/" },
  { title: "Experience", url: "/experience/" },
  { title: "Contact", url: "/contact/" },
];
---

<header id="nav-header" class="bg-zinc-100 z-50">
  <nav class="mx-auto flex items-center justify-between p-4 lg:px-8" aria-label="Global">
    <!-- Logo -->
    <div class="flex flex-col lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">{SITE_TITLE}</span>
        <div class="text-xl font-semibold h-6 w-auto">{SITE_TITLE}</div>
        <!-- <div class="text-[0.7rem] text-zinc-400 leading-5 h-6 w-auto">COMPUTATION MEETS ELEGANCE</div> -->
      </a>
    </div>
    <!-- hamburger button -->
    <div class="flex md:hidden">
      <button id="open-nav-btn" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <!-- Menu large -->
    <div class="menu hidden md:flex md:gap-x-4">
      {
        navItems.map(({ title, url }) => (
          <a class="text-sm font-semibold leading-6 rounded-lg px-2 py-1 text-zinc-800 hover:bg-zinc-200" href={url}>
            {title}
          </a>
        ))
      }
      <!-- <a class="text-sm font-semibold leading-6 rounded-lg px-2 py-1 bg-zinc-800 text-zinc-100 hover:bg-zinc-700" href=/contact>
        CONTACT
      </a> -->
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div id="menu-mobile" class="hidden md:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-zinc-200 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">{SITE_TITLE}</span>
          <div class="text-xl font-semibold h-6 w-auto">{SITE_TITLE_SMALL}</div>
        </a>
        <button id="close-nav-btn" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <div class="-mx-3">
              {
                navItems.map(({ title, url }) => (
                  <a class="-mx-3 block rounded-lg px-4 py-2 text-base font-semibold leading-7 text-zinc-900 hover:bg-zinc-100" href={url}>
                    {title}
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  const menu = document.querySelector("#menu-mobile");
  const openNavButton = document.querySelector("#open-nav-btn");
  const closeNavButton = document.querySelector("#close-nav-btn");

  const toggleMenu = () => {
    menu.classList.toggle("hidden");
  };

  openNavButton.addEventListener("click", toggleMenu);
  closeNavButton.addEventListener("click", toggleMenu);
</script>
