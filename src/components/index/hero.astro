---
import { Picture } from "@astrojs/image/components";
import girders from "../../assets/ptrn-girders.jpeg";
import bridge from "../../assets/bridge-full2.png";

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<section class="relative bg-gradient-to-t from-[#F2F2F2] to-[#F5F5F5]">
  <div class="textContainer absolute z-10 mt-16 ml-6 sm:ml-16 lg:ml-28 flex flex-col max-w-sm">
    <h1 class="text-3xl font-bold tracking-tight text-gray-800 sm:text-6xl">
      Engineering a better Future, <span class="text-sky-600">Together</span>
    </h1>
    <p class="pt-6 text-xl">
      Designed from the ground up to bridge the gap between your vision and
      reality
    </p>
    <div class="pt-6 flex items-center gap-x-6">
      <a
        class="rounded-lg px-4 py-3 text-sm font-semibold text-white shadow-xl bg-zinc-600 hover:bg-zinc-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-zinc-600"
        href="/design-engineering/services"
        >Check our services
      </a>
 
      </a>
    </div>
  </div>
  <div class="flex justify-end">
    <Picture
      class="-z-10 inset-0 h-[calc(100vh-5rem)] object-cover"
      src={bridge}
      widths={widths}
      sizes={sizes}
      alt="Bridge"
    />
  </div>
</section>
